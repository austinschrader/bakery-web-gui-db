@{
  Layout = "_Layout";
}

@using Shop.Models;
@model List<Shop.Models.Flavor>;

<h1>Flavor Page</h1>

@if (Model.Count == 0)
{
  <h3>No Flavors have been added to the SQL database</h3>
}

<ul>
  @foreach (Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId})</li>
  }
</ul>

<p>@Html.ActionLink("Add a new flavor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>